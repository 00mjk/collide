<?xml version="1.0" encoding="UTF-8"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder">
	<ui:with field="res" type="collide.gwtc.ui.GwtCompilerShell.Resources" />
	<div ui:field="body" class="{res.gwtSettingsCss.settingsContainer}">
   <div class="{res.gwtCompilerCss.options}" >Run Action:<br/>
         <input 
            type="radio"  
            value="Self" 
            name="target" 
            ui:field="radioSelf" 
            class="{res.baseCss.radio}"
         /><label ui:field="labelSelf" class="{res.gwtCompilerCss.radioLabel}">Reload Window</label>
         <br/>
         <input 
            type="radio"
            value="No"
            name="target" 
            ui:field="radioNoOpen" 
            class="{res.baseCss.radio}"
         /><label ui:field="labelNoOpen" class="{res.gwtCompilerCss.radioLabel}">Do Not Open</label>
         <br/>
         <input 
            type="radio" 
            value="Window" 
            name="target" 
            ui:field="radioWindow" 
            class="{res.baseCss.radio}"
         /><label ui:field="labelWindow" class="{res.gwtCompilerCss.radioLabel}">Open In New Window</label>
         <br/>
         <input type="radio" 
            value="Iframe" 
            name="target" 
            ui:field="radioIframe" 
            class="{res.baseCss.radio}"
         /><label ui:field="labelIframe" class="{res.gwtCompilerCss.radioLabel}">Open In Iframe</label>
      </div><!-- Ends compile target radios -->
      
      <div ui:field="containerToOpen" class="{res.gwtSettingsCss.urlBoxContainer}" style="height:0px">
        <label ui:field="labelToOpen" class="{res.gwtCompilerCss.radioLabel}">Url to open:<br/></label>
        <input ui:field="inputToOpen" class="{res.gwtSettingsCss.urlBox}" type="text" value="/static/$module/index.html" />
        <br/>
        <input ui:field="inputAutoOpen" type="checkbox" />
        <label ui:field="labelAutoOpen" class="{res.gwtCompilerCss.radioLabel}">Open automatically<br/></label>
      </div>
      <div class="{res.gwtCompilerCss.options}">
      Log Level:<br/>
         <input 
            type="radio"
            value="ERROR"
            name="loglevel" 
            ui:field="radioLogError" 
            class="{res.baseCss.radio}"
         /><label ui:field="labelLogError" class="{res.gwtCompilerCss.radioLabel}" for="radioLogError">Error</label>
         <br/>
         <input 
            type="radio"
            value="WARN"
            name="loglevel" 
            ui:field="radioLogWarn" 
            class="{res.baseCss.radio}"
         /><label ui:field="labelLogWarn" class="{res.gwtCompilerCss.radioLabel}" for="radioLogWarn">Warn</label>
         <br/>
         <input 
            type="radio"
            value="INFO"
            name="loglevel" 
            ui:field="radioLogInfo" 
            class="{res.baseCss.radio}"
         /><label ui:field="labelLogInfo" class="{res.gwtCompilerCss.radioLabel}" for="radioLogInfo">Info</label>
         <br/>
         <input 
            type="radio"
            value="TRACE"
            name="loglevel" 
            ui:field="radioLogTrace" 
            class="{res.baseCss.radio}"
         /><label ui:field="labelLogTrace" class="{res.gwtCompilerCss.radioLabel}" for="radioLogTrace">Trace</label>
         <br/>
         <input 
            type="radio"
            value="DEBUG"
            name="loglevel" 
            ui:field="radioLogDebug" 
            class="{res.baseCss.radio}"
         /><label ui:field="labelLogDebug" class="{res.gwtCompilerCss.radioLabel}" for="radioLogDebug">Debug</label>
         <br/>
         <input 
            type="radio"
            value="SPAM"
            name="loglevel" 
            ui:field="radioLogSpam" 
            class="{res.baseCss.radio}"
         /><label ui:field="labelLogSpam" class="{res.gwtCompilerCss.radioLabel}" for="radioLogSpam">Spam</label>
         <br/>
         <input 
            type="radio"
            value="ALL"
            name="loglevel" 
            ui:field="radioLogAll" 
            class="{res.baseCss.radio}"
         /><label ui:field="labelLogAll" class="{res.gwtCompilerCss.radioLabel}" for="radioLogAll">All</label>
      
      </div>
         <input 
            type="checkbox"
            name="draftMode" 
            ui:field="checkDraftMode" 
         /><label ui:field="labelDraftMode" class="{res.gwtCompilerCss.radioLabel}" for="checkDraftMode">Draft Mode</label>
      <!--
      <div ui:field="containerToOpen" class="{res.gwtSettingsCss.urlBoxContainer}" style="height:0px">
        <label ui:field="labelToOpen" class="{res.gwtCompilerCss.radioLabel}">Url to open:<br/></label>
        <input ui:field="inputToOpen" class="{res.gwtSettingsCss.urlBox}" type="text" value="/static/$module/index.html"
        /> -->
  
	</div>
</ui:UiBinder>